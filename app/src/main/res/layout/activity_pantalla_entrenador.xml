<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dam.tecnifutbol.Entrenador.PantallaEntrenador">

    <Button
        android:id="@+id/btn_Entrenamientos"
        android:layout_width="229dp"
        android:layout_height="133dp"
        android:layout_marginTop="100dp"
        android:textSize="25dp"
        android:text="Entrenamientos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Partidos" />

    <Button
        android:id="@+id/btn_Partidos"
        android:layout_width="229dp"
        android:textSize="25dp"
        android:layout_height="133dp"
        android:layout_marginTop="84dp"
        android:text="Partidos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="221dp"
        android:layout_height="88dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Entrenador"

        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>